.page {
  display: flex;
  flex-direction: column;
  max-width: 1200px;
  min-height: 100vh;
  margin: 0 auto;

  &__header {
    height: 100px;
  }

  &__body {
    display: flex;
    flex-wrap: wrap;
    flex-grow: 1;
  }

  &__filters {
    width: 35%;
  }

  &__results {
    width: 65%;
  }

  &__footer {
    height: 100px;
  }
}