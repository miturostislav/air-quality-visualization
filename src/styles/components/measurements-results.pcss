.location-data-page {
  display: flex;

  &__back-button {
    width: 100px;
    height: 100px;
  }

  &__results {
    width: 100%;
  }

  &__item {
    display: flex;
    align-items: center;
    text-align: left;
    flex-wrap: wrap;
    width: 100%;
    padding: 0 10px;
    margin-top: 5px;
    border: 1px solid var(--color-iron);
    border-radius: 4px;

    @media (--sm-viewport) {
      height: 55px;

      &:hover {
        border-color: var(--color-falcon);
      }
    }
  }

  &__field, &__col-header {
    flex-basis: 50%;

    @media (--xs-viewport-only) {
      padding: 5px 0;
    }
  }

  &__col-header {
    font-weight: var(--font-weight-600);
  }

  @media (--sm-viewport) {
    &__location {
      flex-basis: 15%;
    }

    &__city {
      flex-basis: 15%;
    }

    &__country {
      flex-basis: 10%;
    }

    &__parameter {
      flex-basis: 10%;
    }

    &__value {
      flex-basis: 10%;
    }

    &__unit {
      flex-basis: 10%;
    }

    &__coordinates {
      flex-basis: 15%;
    }

    &__date {
      flex-basis: 15%;
    }
  }
}